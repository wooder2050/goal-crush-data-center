  user          User    @relation(fields: [user_id], references: [user_id], onDelete: Cascade)
  predicted_mvp Player? @relation(fields: [predicted_mvp_id], references: [player_id], onDelete: SetNull)

  @@unique([match_id, user_id])
  @@index([match_id], map: "idx_match_predictions_match_id")
  @@index([user_id], map: "idx_match_predictions_user_id")
  @@map("match_predictions")
}

model UserPoint {
  point_id      Int      @id @default(autoincrement())
  user_id       String   @db.VarChar(255)
  points_change Int
  point_type    String   @db.VarChar(50) // 'post_create', 'comment_create', 'like_received', 'prediction_correct', 'daily_login'
